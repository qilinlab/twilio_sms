<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="sms_view_inherit" model="ir.ui.view">
            <field name="name">sms.view.inherit.form</field>
            <field name="model">sms.sms</field>
            <field name="inherit_id" ref="sms.sms_tsms_view_form" />
            <field name="arch" type="xml">
                <field name="error_code" position="attributes">
                    <attribute name="attrs">{'invisible': [('error_message', '!=', False)]}</attribute>
                </field>
                <field name="error_code" position="after">
                    <field name="error_message" attrs="{'invisible': [('error_message', '=', False)]}" />
                </field>
            </field>
        </record>

    </data>
</odoo>